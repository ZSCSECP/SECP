<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>项目平台</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/css/style1.css" rel="stylesheet" type="text/css" />
    <link href="~/css/settings.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="~/css/skeleton.css" rel="stylesheet" type="text/css" />
    <script src="~/js/jquery-1.8.2.min.js" type="text/javascript"></script> <!-- jQuery -->
    <script src="~/js/jquery.easing.1.3.js" type="text/javascript"></script> <!-- jQuery easing -->
    <script src="~/js/modernizr.custom.js" type="text/javascript"></script> <!-- Modernizr -->
    <script src="~/js/jquery-ui-1.10.1.custom.min.js" type="text/javascript"></script> <!-- tabs, toggles, accordion -->


    <script src="~/js/jquery.meanmenu.js"></script>
    <script>
        jQuery(document).ready(function () {
            jQuery('header nav').meanmenu();
        });
    </script>

    <script src="~/js/jquery.themepunch.plugins.min.js"></script>
    <script src="~/js/jquery.themepunch.revolution.min.js"></script>
    <script src="~/js/revolution-slider-options.js"></script>

    <script src="~/js/jquery.prettyPhoto.js"></script>
    <script>
        $(document).ready(function () {
            $("a[data-gal^='prettyPhoto']").prettyPhoto();
        });
    </script>

    <!-- Tooltip -->
    <script src="~/js/tooltip.js"></script>

    <!-- Flexisel -->
    <script type="text/javascript" src="~/js/jquery.flexisel.js"></script>

    <!-- Favicons
    ================================================== -->
    <link rel="shortcut icon" href="~/images/favicon.ico">
    <link rel="apple-touch-icon" href="~/images/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/images/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/images/apple-touch-icon-114x114.png">

</head>
<body>
    <header class="header">
        <div class="a">

            <!--<h1 class="logo"><a href="index.html"><img src="images/logo.png"/></a></h1>-->
            <div style="width:132px;float:left;margin-top: 23px;margin-bottom: 20px;padding-left:70px"><a href="~/Home.html"><img src="~/images/Pj_logo.png" width="132" style="float:left" /> </a> </div>
            <div style="width:100%">
                <nav class="main_menu">

                    <ul>
                        <li class="@ViewData["H"]">
                            <a href="ProjectHome">
                                首页
                                <div class="sub">
                                    Home Page
                                </div>
                            </a>
                        </li>
                        <li class="@ViewData["Q"]">
                            <a href="CEProject">
                                企业项目
                                <div class="sub">
                                    Enterprise project
                                </div>
                            </a>
                            <ul>
                                <li><a href="CEProject">查看项目</a></li>
                                <li><a href="PEProject">发布项目</a></li>
                            </ul>
                        </li>

                        <li class="@ViewData["S"]">
                            <a href="CSProject">
                                师生项目
                                <div class="sub">
                                    School project
                                </div>
                            </a>
                            <ul>
                                <li><a href="CSProject">查看项目</a></li>
                                <li><a href="PSProject">发布项目</a></li>
                            </ul>
                        </li>

                        <li class="@ViewData["Z"]">
                            <a href="CCProject">
                                合作项目
                                <div class="sub">
                                    Cooperative project
                                </div>
                            </a>
                            <ul>
                                <li><a href="CCProject">查看项目</a></li>
                                <li><a href="PCProject">发布项目</a></li>
                            </ul>
                        </li>

                        <li class="@ViewData["W"]">
                            <a href="COProject">
                                外包项目
                                <div class="sub">
                                    Outsourcing project
                                </div>
                            </a>
                            <ul>
                                <li><a href="COProject">查看项目</a></li>
                                <li><a href="POProject">发布项目</a></li>
                            </ul>
                        </li>

                        <li class="@ViewData["X"]">
                            <a href="MOProject">
                                我的项目
                                <div class="sub">
                                    My project
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="/Login/Login">
                                @ViewData["State"]
                                <div class="sub">
                                    @ViewData["YState"]
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="../PersonalInformation/PIstudent">
                                @ViewData["UserName"]
                                <div class="sub">
                                    @ViewData["TimeNow"]
                                </div>
                            </a>

                        </li>
                    </ul>
                </nav><!-- navigation -->
            </div>
            <div class="clearfix"></div>
        </div>
    </header><!-- header -->
    <div>
        @RenderBody()
    </div>
    <!-- container -->
    <footer class="footer">
        <div class="container">
            <div class="footer-bottom clearfix" style="color:white">
                Copyright &copy; 14软件开发A班 罗俐萍 魏铮淑 钟碧珍  指导:12软件开发B班 黄雅聪 黎泯生      电子科技大学中山学院
            </div><!-- footer-bottom -->
        </div>
    </footer><!-- footer -->

    <script type="text/javascript">

        $(window).load(function () {
            $("#flexiselDemo2").flexisel({
                visibleItems: 5,
                animationSpeed: 1000,
                autoPlay: true,
                autoPlaySpeed: 3000,
                pauseOnHover: true,
                enableResponsiveBreakpoints: true,
                responsiveBreakpoints: {
                    portrait: {
                        changePoint: 480,
                        visibleItems: 1
                    },
                    landscape: {
                        changePoint: 640,
                        visibleItems: 2
                    },
                    tablet: {
                        changePoint: 768,
                        visibleItems: 3
                    }
                }
            });

        });
    </script>
</body>
</html>
