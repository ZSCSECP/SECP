<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.css.map">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,700,600,800' rel='stylesheet' type='text/css'>
    <link href="~/css/tech-main.css" rel="stylesheet" />
    <link href="~/css/TechInfoPublic.css" rel="stylesheet" />
</head>
<body>
    @*导航栏*@
    <div class="mainmenu-wrapper">
        <div class="container">
            <div class="menuextras">
                <div class="extras">
                    <ul>
                        <li><a href="#"><img src="/images/Social_Logo/Github_Logo2.png" /></a></li>
                        <li><a href="#"><img src="/images/Social_Logo/QQ_Logo2.png" /></a></li>
                        <li><a href="#"><img src="/images/Social_Logo/Renren_Logo2.png" /></a></li>
                        <li>
                            <a href="/Login/Login">
                                @ViewData["State"]
                                <div class="sub">
                                    @ViewData["YState"]
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="../PersonalInformation/PIstudent">
                                @ViewData["UserName"]
                                <div class="sub">
                                    @ViewData["TimeNow"]
                                </div>
                            </a>

                        </li>
                    </ul>
                </div>
            </div>
            <nav id="colorNav" class="colorNav">
                <ul>
                    <li class="logo-wrapper"><a href="~/Goverment/TechHome"><img src="/images/mPurpose-logo5.png" alt="HomeLogo" /></a></li>
                    <li>
                        <a href="/Goverment/GTechnologyPublish">信息公开</a>
                        <ul>
                            <li><a href="/Goverment/GTechnologyPublish?type=0">科技规划</a></li>
                            <li><a href="/Goverment/GTechnologyPublish?type=1">资金公开</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/Goverment/GSTPolicy">科技政策</a>
                        <ul>
                            <li><a href="/Goverment/GSTPolicy?type=0"><h4 id="0">地方政策</h4></a></li>
                            <li><a href="/Goverment/GSTPolicy?type=1"><h4 id="1">国家政策</h4></a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/Goverment/GStatic">科技动态</a>
                        <ul>
                            <li><a href="/Government/GStatic?type=1"><h4 id="1">要闻</h4></a></li>
                            <li><a href="/Government/GStatic?type=2"><h4 id="2">图片新闻</h4></a> </li>
                            <li><a href="/Government/GStatic?type=3"><h4 id="4">科技部工作</h4></a></li>
                            <li><a href="/Government/GStatic?type=4"><h4 id="3">地方科技工作</h4></a></li>
                            <li><a href="/Government/GStatic?type=5"><h4 id="5">国内外科技动态</h4></a></li>
                        </ul>
                    </li>

                    <li>
                        <a href="/Goverment/GTechInfo/#techProgram">科技计划</a>
                        <ul>
                            <li><a href="/Goverment/GTechInfo/#techProgram">资金申报</a></li>
                            <li><a href="/Goverment/GTechInfo/#techProgram">项目申报</a></li>

                        </ul>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    @*脚注*@
    <footer class="footer">
        <div class="row">
            <div class="col-md-12">
                <div class="footer-copyright">Copyright &copy; 2016.电子科技大学中山学院</div>
            </div>
        </div>
    </footer>
    <script>
        $(function () {
            function footerPosition() {
                $("footer").removeClass("fixed-bottom");
                var contentHeight = document.body.scrollHeight,//网页正文全文高度
                    winHeight = window.innerHeight;//可视窗口高度，不包括浏览器顶部工具栏
                if (!(contentHeight > winHeight)) {
                    //当网页正文高度小于可视窗口高度时，为footer添加类fixed-bottom
                    $("footer").addClass("fixed-bottom");
                } else {
                    $("footer").removeClass("fixed-bottom");
                }
            }
            footerPosition();
            $(window).resize(footerPosition);
        });
    </script>
</body>
</html>
